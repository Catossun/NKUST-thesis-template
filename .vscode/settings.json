{
    "latex-workshop.latex.outDir": "%DIR%/build",                 // 輸出在main目錄底下的build
    "latex-workshop.latex.recipes": [
        {
            "name": "pdflatex -> bibtex -> pdflatex*2",
            "tools": [
                "pdflatex",
                "bib",
                "pdflatex",
                "pdflatex"
            ]
        },
        {
            "name": "xelatex",
            "tools": [
                "xelatex"
            ]
        },
        {
            "name": "latexmk",
            "tools": [
                "latexmk"
            ]
        }
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "--output-directory=%OUTDIR%",
                "%DOC%"
            ]
        },
        {
            "name": "xelatex",
            "command": "xelatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "--output-directory=%OUTDIR%",
                "%DOC%"
            ]
        },
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "--output-directory=%OUTDIR%",
                "%DOC%"
            ]
        },
        {
            "name": "bib",
            "command": "biber",
            "args": [
                "--output-directory=%OUTDIR%",
                "%DOCFILE%"
            ]
        }
    ],
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.latex.clean.fileTypes": [
        
        "*/*.aux",
        "*/*.bbl",
        "*/*.blg",
        "*/*.idx",
        "*/*.ind",
        "*/*.lof",
        "*/*.lot",
        "*/*.out",
        "*/*.toc",
        "*/*.acn",
        "*/*.acr",
        "*/*.alg",
        "*/*.glg",
        "*/*.glo",
        "*/*.gls",
        "*/*.ist",
        "*/*.fls",
        "*/*.log",
        "*/*.fdb_latexmk"
    ]
}